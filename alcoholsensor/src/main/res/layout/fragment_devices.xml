<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:elevation="3dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingBottom="10dp"
            android:text="This app is based on Lukas`s bluegraph library. "
            android:textColor="#BDBDBD"
            android:textSize="8dp" />

        <ImageView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:elevation="3dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/imageView1"
            android:elevation="3dp"
            android:text="UNIST\nFlexible Nano-electronics\nand Biotechnology Lab"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/container"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol Sensor"
            android:textColor="#001c54"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JANG-UNG PARK Research Group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homepage : http://wearable.unist.ac.kr"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail : jangung@unist.ac.kr  or  jangung@gmail.com"
            android:textSize="12dp" />

        <TextView
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone : +82-52-217-2533"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIST-gil 50, Ulsan 689-798, Republic of Korea.Engineering Bldg. 1, Office 801-1"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/connect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#001c54"
        android:text="CONNECT TO DEVICES"
        android:textColor="#FFFFFF" />

<!--    android:text="Connect to device"-->

</RelativeLayout>
